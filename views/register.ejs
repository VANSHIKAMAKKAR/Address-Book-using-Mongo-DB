<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width,initial-scale=1">
		<title>Register</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
		<style>
		input{
			border-radius: 10px;
			border-color: #000;
		}
		</style>
	</head>
	<body>
        <center style="top :50%; left: 50%; transform:translate(-50%,-50%); position:absolute;">
        <form action="/register" method="post">
        	<input name="name" type="text" placeholder="Name"><br><br>
        	<input name="email" type="email" placeholder="EMAIL"><br><br>
        	<input id="demo2" name="password" type="password" placeholder="Password"><br><br>
        	<input name="phone" type="text" placeholder="PhoneNo."><br><br>
     <button onclick="return validate()"type="submit" class="btn-success">Register</button>
    </form>
</center>
<script>
function validate()
{
var a=document.getElementById("demo2").value;
if(a.length<8)
{
	alert("Password must be 8 characters long");
	return false;
}

}
</script>
    </body>
</html>