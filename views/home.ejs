<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width,initial-scale=1">
		<title>Register</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
		<style>
		input{
			border-radius: 10px;
			border-color: #000;
		}
		#demo1{
		
			height: 50px;
			width: 150px;
		}
		td,th{
			width: 350px;
            height: 40px;
		}
		#colt
		{
			width: 150px;
		}
		</style>
	</head>
	<body>
		<b><font size="12">USERS</font></b>
		<span style="float:right"><font size="4">
		<% if(user){ %>
        <%=user.name %>
		<% } %>
		</font></span>
		<center><a href="/addname"><button id="demo1" class="btn-success">ADD</button></a></center>
     <center style="top :50%; left: 50%; transform:translate(-50%,-50%); position:absolute;">
     <table>
     <tr><th>Name</th>
     	<th>Address</th>
     	<th>Phone No.</th>
     </tr>
     <% book.forEach(function(i){ %>
     <tr>
     	<td><%=i.name %></td>
     	<td><%=i.address %></td>
     	<td><%=i.phoneno %></td>
     	<td width="200px"><a href="/editdata/"+<%=i._id%>><button id="colt">Edit</button></a></td>
     	<td width="200px"><a href="/deletedata/"+<%=i._id%>><button id="colt">Delete</button></a></td>
     </tr>
     <%})%>
 </table>
	</center>
    </body>
</html>